using System;


namespace NumberPyramid
{

	class Program
	{

    	static void Main(string[] args)
    	{
        
        	int num = 9;
    		int temp = 0;
        
            
            Console.Write("Enter a positive integer for the number of rows you'd like to display in the pyramid: 9");
            
        	
            
            for (int row = 0; row <= num; row++)
            {
            	for (int col = temp; col >= 1; col--)
                {
                	Console.Write(row + " ");
                }
              
//I watched a youtube video to help explain to me how to write this code so I'm not entierly sure what it means or why I used it but based on the videos/text I understand why I used the 'for' function.
                
                Console.WriteLine();
                temp++;
            }
            
            Console.ReadLine();
            
    	}
	}
}
